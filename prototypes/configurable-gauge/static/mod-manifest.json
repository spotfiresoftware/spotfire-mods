{
    "apiVersion": "1.3",
    "version": "1.2",
    "name": "Gauge",
    "id": "spotfire-configurable-gauge-prototype",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "gaugeWidth",
            "defaultValue": 20,
            "type": "integer"
        },
        {
            "name": "gaugeOpacity",
            "defaultValue": 100,
            "type": "integer"
        },
        {
            "name": "ticksOpacity",
            "defaultValue": 100,
            "type": "integer"
        },
        {
            "name": "showPercent",
            "defaultValue": "false",
            "type": "boolean"
        },
        {
            "name": "showShake",
            "defaultValue": "false",
            "type": "boolean"
        },
        {
            "name": "showMinMax",
            "defaultValue": "false",
            "type": "boolean"
        }
    ],
    "dataViewDefinition": {
        "tooltip": {
            "enabled": true
        },
        "colorAxis": {
            "mode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Gauge",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis"
                }
            },
            {
                "name": "Min",
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "placement": "none",
                "legendItem": {
                    "title": "Min value"
                }
            },
            {
                "name": "Value",
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "placement": "left"
            },
            {
                "name": "Max",
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "placement": "none",
                "legendItem": {
                    "title": "Max value"
                }
            }
        ]
    },
    "files": ["index.html", "main.css", "bundle.js"]
}
