{
    "apiVersion": "1.2",
    "version": "1.0",
    "name": "Sunbirst chart",
    "id": "spotfire-sunbirst-chart-prototype-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "curveType",
            "type": "string",
            "defaultValue": "Rounded"
        },
        {
            "name": "xLabelsRotation",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "yAxisNormalization",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "enableColorFill",
            "type": "boolean",
            "defaultValue": "true"
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "preferredDualMode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "Hierarchy",
                "automaticConfiguration": {
                    "priority": "100"
                },
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's Hierarchy-axis"
                }
            },
            {
                "name": "Size",
                "mode": "continuous",
                "placement": "left"
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}