{
    "apiVersion": "1.3",
    "version": "1.1",
    "name": "Spider chart",
    "id": "spotfire-spider-chart-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "curveType",
            "type": "string",
            "defaultValue": "Rounded"
        },
        {
            "name": "xLabelsRotation",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "yAxisNormalization",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "enableColorFill",
            "type": "boolean",
            "defaultValue": "true"
        }
    ],
    "dataViewDefinition": {
        "tooltip": { "enabled": true },
        "colorAxis": {
            "mode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "X",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis"
                }
            },
            {
                "name": "Y",
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "placement": "left"
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}