{
    "apiVersion": "1.1",
    "version": "1.0",
    "name": "Bar Chart",
    "id": "js-dev-barchart",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "y-axis-mode",
            "type": "string",
            "defaultValue": "numeric"
        },
        {
            "name": "split-bars",
            "type": "boolean",
            "defaultValue": true
        }
    ],
    "dataViewDefinition": {
        "colorAxis": {
            "mode": "dual",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "X",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis"
                }
            },
            {
                "name": "Y",
                "mode": "continuous",
                "placement": "left",
                "allowMultipleMeasures": true
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "main.js"
    ]
}