{
    "apiVersion": "1.3",
    "version": "1.2.1",
    "name": "Area Chart",
    "id": "spotfire-area-chart-mod",
    "icon": "icon.svg",
    "properties": [
        {
            "name": "chartType",
            "type": "string",
            "defaultValue": "overlapping"
        },
        {
            "name": "roundedCurves",
            "type": "boolean",
            "defaultValue": "false"
        },
        {
            "name": "gapfill",
            "type": "boolean",
            "defaultValue": false
        }
    ],
    "dataViewDefinition": {
        "tooltip": { "enabled": true },
        "colorAxis": {
            "mode": "categorical",
            "dropTarget": {
                "icon": "Color",
                "description": "Color by {0}"
            }
        },
        "axes": [
            {
                "name": "X",
                "mode": "categorical",
                "placement": "bottom",
                "dropTarget": {
                    "icon": "XAxis3D",
                    "description": "Use {0} on the mod's X-axis"
                },
                "propertyControl": {
                    "title": "X-axis"
                },
                "legendItem": {
                    "title": "X-axis",
                    "defaultVisibility": "hidden"
                }
            },
            {
                "name": "Y",
                "mode": "continuous",
                "allowMultipleMeasures": true,
                "placement": "left",
                "propertyControl": {
                    "title": "Y-axis"
                },
                "legendItem": {
                    "title": "Y-axis",
                    "defaultVisibility": "hidden"
                }
            }
        ]
    },
    "files": [
        "index.html",
        "main.css",
        "bundle.js"
    ]
}