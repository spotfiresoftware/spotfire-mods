{
  "name": "ts-echarts-graph",
  "version": "1.0.0",
  "description": "ECharts graph example ported to a Spotfire mod (TypeScript)",
  "scripts": {
    "build": "esbuild src/main.ts --bundle --outfile=build/main.js --sourcemap --platform=browser --target=es2018",
    "build:watch": "esbuild src/main.ts --bundle --outfile=build/main.js --sourcemap --platform=browser --target=es2018 --watch",
    "server": "mods-dev-server --path /src/mod-manifest.json --port 3070"
  },
  "devDependencies": {
    "esbuild": "^0.17.0",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "echarts": "^5.4.0",
    "@spotfire/mods-api": "^2.3.0"
  }
}